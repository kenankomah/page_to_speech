{
  "manifest_version": 3,
  "name": "Page to Speech Reader",
  "version": "0.1.0",
  "description": "Convert the current page's text to audio using OpenAI or Web Speech.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "offscreen"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Read this page"
  },
  "options_page": "options.html"
}

